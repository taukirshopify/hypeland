<style>
  .intro{
  opacity: 0;
}


    button.nav-btn.slick-arrow.default {
        border: none !important;
        background: transparent !important;
        width: auto;
    }
    button.nav-btn.slick-arrow.default:hover{
        border: none;
        background: transparent;
    }
    .ot-video video {
        aspect-ratio: 16 / 11.97;
    }
    .slick-arrow i {
        font-size: 23px;
        line-height: 40px;
        color: #000;
    }

</style>

<script>
    document.addEventListener("DOMContentLoaded", () => {



      $('#featuredSlide').slick({
        arrows: false,
        infinite: true,
        touchMove:true,
        speed: 1000,
        slidesToShow: 1,
        slidesToScroll: 1,
        adaptiveHeight: true,
        dots: true,
        appendDots: $('.slider-nav-wrap').find('.custom-dots'),
        asNavFor: '.featured-content',
      });
      $('.featured-content').slick({
        arrows: false,
        infinite: true,
        speed: 1000,
        slidesToShow: 1,
    
        slidesToScroll: 1,
        dots: false,
        fade: true,
      });

      if(jQuery(".bfeaturedSlide").hasClass("slick-active")){
        $("#featuredSlide").removeClass("intro");
        $(".featured-content").removeClass("intro");
      }
    });
  


  </script>