<nav class="main-menu">
    <ul>
      {% assign footer_menu_4 = section.settings.main-menu %}
      {% for link in linklists[footer_menu_4].links %}


        {%- comment %}<locksmith:cbc5>{% endcomment -%}
          {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: link, subject_parent: linklists[footer_menu_4], variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% else %}{% continue %}{% endif -%}
        {%- comment %}</locksmith:cbc5>{% endcomment -%}


        {% assign child_list_handle = link.title | handleize %}
                    
        {% if linklists[child_list_handle].links != blank %}


    
        <li class="menu-item-hot-children">
            <a href="{{ link.url }}">{{ link.title }}</a>

           


            <ul class="sub-menu">
                {% for childlink in linklists[child_list_handle].links %}

                    {%- comment %}<locksmith:b81a>{% endcomment -%}
                      {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: childlink, subject_parent: linklists[child_list_handle], variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% else %}{% continue %}{% endif -%}
                    {%- comment %}</locksmith:b81a>{% endcomment -%}

                    {% assign grand_child_link_handle = childlink.title | handleize %}
                      {% if linklists[grand_child_link_handle] and linklists[grand_child_link_handle].links.size > 0 %}

                        <li><a href="{{ childlink.url }}">{{ childlink.title }}</a>
                          <ul>
                                {% for grand_child_link in linklists[grand_child_link_handle].links %}
                                    {%- comment %}<locksmith:e529>{% endcomment -%}
                                      {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: grand_child_link, subject_parent: linklists[grand_child_link_handle], variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% else %}{% continue %}{% endif -%}
                                    {%- comment %}</locksmith:e529>{% endcomment -%}
                                    <li class="tas"><a href="{{ grand_child_link.url }}">{{ grand_child_link.title }}/a></li>
                                {% endfor %}
                             </ul>
                        <li>

                        {% else %}
                             <li><a href="{{ childlink.url }}">{{ childlink.title }}</a></li>
                      {% endif %}
                {% endfor %}
            </ul>
        </li>



        

        {% else %}

        <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endif %}
      {%- endfor -%}
    </ul>
</nav>





<script>

  
    $(document).ready(function() {
    if ($('.tes')) {
       jQuery('.tas').parent('ul').addClass('mega-menu');
     jQuery('.tas').parent('ul').parent().addClass('megamenuwrap');
   jQuery('.tas').parent('ul').removeClass('sub-menu');
    } 
    });
    
</script>